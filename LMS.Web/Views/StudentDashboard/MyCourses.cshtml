@model IEnumerable<LMS.Models.Course>

@{
    ViewData["Title"] = "My Courses";
}

<h2>My Courses</h2>


<form method="get" class="mb-3">
    <input type="text" name="search" value="@ViewBag.CurrentSearch" placeholder="Search courses..." class="form-control" style="width:300px;display:inline-block;" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You are not enrolled in any courses yet.
        <a asp-action="Index" asp-controller="StudentDashboard">Browse available courses</a>
    </div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Course Title</th>
                <th>Description</th>
                <th>Instructor</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Title</td>
                    <td>@course.Description</td>
                    <td>@course.Instructor?.DisplayName</td>
                    <td>
                        <a asp-action="Lessons" asp-controller="StudentDashboard" asp-route-courseId="@course.Id" class="btn btn-primary btn-sm">View Lessons</a>
                        <a asp-action="Assignments" asp-controller="StudentDashboard" asp-route-courseId="@course.Id" class="btn btn-success  btn-sm">View Assignments</a>

                        <form asp-action="Unenroll" method="post" style="display:inline;">
                            <input type="hidden" name="courseId" value="@course.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Unenroll</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("MyEnrolledCourses", new { page = i, search = ViewBag.CurrentSearch })">@i</a>
                </li>
            }
        </ul>
    </nav>
}
