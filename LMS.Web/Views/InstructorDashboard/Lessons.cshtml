@model IEnumerable<LMS.Models.Lesson>
@{
    ViewData["Title"] = "Lessons";
    var courseId = ViewBag.CourseId as int? ?? 0;
}

<h2>Lessons</h2>

<p>
    <a asp-action="CreateLesson" asp-route-courseId="@courseId" class="btn btn-primary">+ Add Lesson</a>
    <a asp-action="Index" class="btn btn-secondary">Back to Courses</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">No lessons yet for this course.</div>
}
else
{
    <table class="table">
        <thead>
            <tr><th>Title</th><th>Content</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (var l in Model)
            {
                <tr>
                    <td>@l.Title</td>
                    <td>@l.Content</td>
                    <td>
                        @if (!string.IsNullOrEmpty(l.MediaPath))
                        {
                            <a href="@l.MediaPath" target="_blank">Download Media</a>
                        }
                        <form asp-action="DeleteLesson" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@l.Id" />
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this assignment?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
