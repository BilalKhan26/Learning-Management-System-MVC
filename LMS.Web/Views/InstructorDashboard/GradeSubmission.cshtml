@model LMS.Models.Submission

@{
    ViewData["Title"] = "Grade Submission";
}

<h2>Grade Submission</h2>

<p><strong>Student:</strong> @Model.Student.DisplayName</p>
<p><strong>Assignment:</strong> @Model.Assignment.Title</p>
<p>
    <strong>File:</strong>
    <a href="@Model.FilePath" target="_blank">Download</a>
</p>

<form asp-action="GradeSubmission" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="submissionId" value="@Model.Id" />

    <div class="form-group">
        <label for="grade">Grade</label>
        <input type="number" step="0.1" name="grade" class="form-control" value="@Model.Grade" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save Grade</button>
    <a asp-action="ViewSubmissions" asp-route-assignmentId="@Model.AssignmentId" class="btn btn-secondary mt-2">Cancel</a>
</form>
